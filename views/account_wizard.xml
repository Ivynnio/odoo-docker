<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_wizard_view" model="ir.ui.view">
            <field name="name">Wizard</field>
            <field name="model">account.wizard</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group col="4">
                        <field name="date_from"/>
                        <!-- <field name="branch_id"/> -->
                        <!-- <field name="target_move" widget="radio"/> -->
                        <field name="date_to"/>
                        <!-- <field name="levels"/> -->
                        <field name="department_id"/>
                    </group>
                    <footer>
                        <button name="generate_laporan_mingguan" string="Laporan Mingguan"
                                type="object" default_focus="1"
                                class="oe_highlight"/>
                        <!-- <button name="generate_laporan_bulanan" string="Laporan Bulanan"
                                type="object" default_focus="1"
                                class="oe_highlight"/>
                        <button name="generate_rekap_laporan_mingguan" string="Laporan Rekap Mingguan"
                                type="object" default_focus="1"
                                class="oe_highlight"/> -->
                        <button name="generate_report_bank" string="Bank"
                                type="object" default_focus="1"
                                class="oe_highlight"/>

                                <button name="generate_xlsx_report" string="xlsx"
                                type="object" default_focus="1"
                                class="oe_highlight"/>

                                <button name="generate_pdf_report" string="pdf"
                                type="object" default_focus="1"
                                class="oe_highlight"/>

                        <button string="Cancel" class="btn btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_account_wizard" model="ir.actions.act_window">
            <field name="name">Cash Flow Statements</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.wizard</field>
            <field name="view_id" ref="advance_cash_flow_statements.account_wizard_view"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="menu_financial_reports" sequence="90"
                  name="Reporting"
                  parent="bi_hr_payroll.menu_hr_payroll_root"/>
        <menuitem id="account_bank_book_menu" name="Reporting" sequence="3"
                  action="advance_cash_flow_statements.action_account_wizard"
                  parent="advance_cash_flow_statements.menu_financial_reports"/>
    </data>
</odoo>
